global function string pf_f_getcurrentdir ();string ls_path

IF gnv_appmgr.is_clienttype = 'PB' THEN
	ls_path = getCurrentDirectory()
ELSE
	ls_path = AppeonGetCacheDir()
END IF

Return ls_path

end function

